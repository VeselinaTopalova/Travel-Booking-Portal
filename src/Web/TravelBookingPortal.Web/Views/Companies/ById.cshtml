@model TravelBookingPortal.Web.ViewModels.Companies.CompanyViewModel

<section class="py-5">
    <div class="container">
        
        <div>
            <div class="form-group text-center">
                <img src="@Model.Logo" class="img-fluid">
            </div>

            <div>
                <h6 class="mt-0">@Model.Name</h6>
            </div>
            <div>
                <h6 class="mt-0">Address: @Model.Address</h6>
            </div>
            <div>
                <h6 class="mt-0">YearEstablished: @Model.YearEstablished</h6>
            </div>
            <div>
                <h6 class="mt-0">About Us</h6>
                @Model.AboutUs
            </div>
            <div>
                <h6 class="mt-0">Why Book With Us</h6>
                @Model.WhyBookWithUs
            </div>

            <div class="row">
                @foreach (var tour in Model.Tours)
                {
            <div class="col-md-4 media">
                <div class="card">
                    <img src="@tour.Image" class="card-img-top" alt="@tour.Name">
                    <div class="card-body">
                        <h5 class="card-title">@tour.Name</h5>
                        <p class="card-text">@tour.Duration days</p>
                        <p class="card-text">From US$@tour.PriceTotal</p>
                        <h6 class="media-heading"><a asp-controller="Tours" asp-action="ById" asp-route-id="@tour.Id">LEARN MORE</a></h6>
                    </div>
                </div>
            </div>
            }
            </div>            
        </div>
    </div>
</section>